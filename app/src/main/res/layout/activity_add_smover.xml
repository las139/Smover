<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="11"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_add_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="대표 사진"
                android:textColor="#444444"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_pick_image"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:background="#51A7E1"
                    android:text="앨범에서 선택"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_pick"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_gray" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_add_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="기기 번호"
                android:textColor="#444444"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_add_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/border_gray"
                android:paddingLeft="3dp"
                android:textColor="#444444"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_add_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="구역 이름"
                android:textColor="#444444"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_add_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/border_gray"
                android:paddingLeft="3dp"
                android:textColor="#444444"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_add_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:text="구역 주소"
                android:textColor="#444444"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_add_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:background="#51A7E1"
                    android:text="우편번호 찾기"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edit_add_addr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray"
                    android:hint="기본 주소"
                    android:paddingLeft="5dp"
                    android:textColor="#444444"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edit_add_addr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray"
                    android:hint="상세 주소"
                    android:paddingLeft="5dp"
                    android:textColor="#444444"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_blue_setting"
        android:text="추가하기"
        android:textColor="#51A7E1"
        android:textSize="14dp" />
</LinearLayout>